<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register_Snack">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="121dp"
        android:layout_height="48dp"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/esamanru_medium"
        android:text="준 사람 : "
        android:textColor="#E19861"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="139dp"
        android:layout_height="46dp"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/esamanru_medium"
        android:text="간식 종류 : "
        android:textColor="#E19861"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="140dp"
        android:layout_height="44dp"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/esamanru_medium"
        android:text="준 시간 : "
        android:textColor="#E19861"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="138dp"
        android:layout_height="43dp"
        android:layout_marginStart="34dp"
        android:layout_marginBottom="72dp"
        android:fontFamily="@font/esamanru_medium"
        android:text="간식 수 : "
        android:textColor="#E19861"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toTopOf="@+id/btnregister"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/txtMany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="33dp"
        android:ems="10"
        android:fontFamily="@font/esamanru_medium"
        android:gravity="start|top"
        android:hint="ex) 5개"
        android:inputType="textMultiLine"
        android:textColor="#E19861"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="60dp"
        android:fontFamily="@font/esamanru_medium"
        android:text="간식정보를 등록해주세요!"
        android:textColor="#E19861"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnregister"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:adjustViewBounds="true"
        android:background="#00000000"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/paw_register" />

    <Spinner
        android:id="@+id/spnGive"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginEnd="4dp"
        android:entries="@array/name"
        android:fontFamily="@font/esamanru_medium"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="@+id/spnType"
        app:layout_constraintTop_toTopOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.476" />

    <Spinner
        android:id="@+id/spnType"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_marginEnd="148dp"
        android:entries="@array/종류"
        android:fontFamily="@font/esamanru_medium"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView5" />

    <TextView
        android:id="@+id/txtdate"
        android:layout_width="103dp"
        android:layout_height="45dp"
        android:layout_marginBottom="332dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.0"
        tools:hint="Now" />

    <Button
        android:id="@+id/btndate"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="336dp"
        android:text="Now"
        app:layout_constraintBottom_toBottomOf="@+id/txtdate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtdate"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>