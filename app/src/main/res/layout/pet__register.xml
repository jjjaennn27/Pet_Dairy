<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pet_Register">

    <EditText
        android:id="@+id/editTextTextPersonName5"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="112dp"
        android:ems="10"
        android:fontFamily="@font/esamanru_medium"
        android:hint="품종을 입력하세요"
        android:inputType="textPersonName"
        android:textColor="#E19861"
        android:textColorHighlight="#FFCCBC"
        android:textColorHint="#FFCCBC"
        android:textColorLink="#FFCCBC"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextPersonName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTextTextPersonName"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName" />

    <ImageView
        android:id="@+id/Animal_img"
        android:layout_width="247dp"
        android:layout_height="180dp"
        android:layout_marginStart="74dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="74dp"
        android:textColor="#E19861"
        android:textColorHighlight="#FFCCBC"
        android:textColorHint="#FFCCBC"
        android:textColorLink="#FFCCBC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginBottom="183dp"
        android:ems="10"
        android:fontFamily="@font/esamanru_medium"
        android:hint="이름을 입력하세요"
        android:inputType="textPersonName"
        android:textColor="#E19861"
        android:textColorHighlight="#FFCCBC"
        android:textColorHint="#FFCCBC"
        android:textColorLink="#FFCCBC"
        android:textCursorDrawable="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/btn_save"
        app:layout_constraintEnd_toEndOf="@+id/btnGallery"
        app:layout_constraintStart_toStartOf="@+id/btnCamera"
        app:layout_constraintTop_toBottomOf="@+id/btnCamera"
        app:layout_constraintVertical_bias="0.424" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:fontFamily="@font/esamanru_medium"
        android:text="등록하기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/spinnergender"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toStartOf="@+id/spinnergender"
        app:layout_constraintTop_toBottomOf="@+id/spinnergender" />

    <Button
        android:id="@+id/btnCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/esamanru_medium"
        android:text="사진찍기"
        app:layout_constraintEnd_toEndOf="@+id/Animal_img"
        app:layout_constraintHorizontal_bias="0.144"
        app:layout_constraintStart_toStartOf="@+id/Animal_img"
        app:layout_constraintTop_toBottomOf="@+id/Animal_img" />

    <Button
        android:id="@+id/btnGallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/esamanru_medium"
        android:text="갤러리"
        app:layout_constraintBottom_toBottomOf="@+id/btnCamera"
        app:layout_constraintEnd_toEndOf="@+id/Animal_img"
        app:layout_constraintHorizontal_bias="0.34"
        app:layout_constraintStart_toEndOf="@+id/btnCamera"
        app:layout_constraintTop_toTopOf="@+id/btnCamera"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="112dp"
        android:ems="10"
        android:fontFamily="@font/esamanru_medium"
        android:hint="생년월일을 입력하세요"
        android:inputType="textPersonName"
        android:textColor="#E19861"
        android:textColorHighlight="#FFCCBC"
        android:textColorHint="#FFCCBC"
        android:textColorLink="#FFCCBC"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextPersonName5"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTextTextPersonName5"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName5" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:max="100"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/spinnergender"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:layout_marginTop="504dp"
        android:autofillHints="남/여"
        android:textColor="#E19861"
        android:textColorHighlight="#FFCCBC"
        android:textColorHint="#FFCCBC"
        android:textColorLink="#FFCCBC"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextPersonName2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTextTextPersonName2"
        app:layout_constraintTop_toTopOf="parent"
        tools:autofillHints="성별" />
</androidx.constraintlayout.widget.ConstraintLayout>